<!DOCTYPE html>
<html>
<head>
  <title>SevenDays</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container'>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Seven Days', root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'Новое фото', new_photo_path %>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">
              <i class="glyphicon glyphicon-th-large"></i>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role='menu'>
              <li>
                <%= link_to 'Настройки', edit_user_registration_path %>
              </li>
              <li>
                <%= link_to 'Выход', destroy_user_session_path, data: { method: :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">
              <i class="glyphicon glyphicon-lock"></i>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu"  role="menu">
              <li>
                <%= link_to 'Вход', new_user_session_path %>
              </li>
              <li>
                <%= link_to 'Регистрация', new_user_registration_path %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
